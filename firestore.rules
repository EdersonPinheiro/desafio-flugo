rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Esta regra permite que qualquer pessoa com a referência do seu banco de dados visualize, edite
      // e exclua todos os dados. É configurado para expirar após 30 dias.
      
      // Certifique-se de escrever regras de segurança para seu aplicativo antes desse tempo.
      allow read, write: if request.time < timestamp.date(2026, 3, 11);
    }
  }
}
